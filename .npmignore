# Node modules - Exclude the node_modules folder
node_modules/

# Build and distribution folders - Keep only dist for publishing
build/

# Configuration files - Exclude development configuration files
webpack.config.js

# IDE/editor-specific files
.vscode/
.idea/
*.sublime-workspace
*.sublime-project

# Test files - Exclude test-related files
tests/
test/
*.spec.js
*.test.js

# Ignore source maps (optional)
*.map

# Log files - Temporary/system-generated files
*.log
*.swp
*.bak

# Environment files - Sensitive information
.env
.env.local
.env.*.local

# OS-specific files
.DS_Store
Thumbs.db

# Temporary or backup files
*.swp
*.bak
*.tmp

# Documentation files - Keep README.md (important for NPM package description)
LICENSE
CHANGELOG.md

# Static assets (optional, depending on use case)
public/
static/
assets/

# Do not exclude src folder (needed for building and library use)
!src/
!src/icons/
!src/index.js

# Include only the dist folder for the final build
!dist/

# Exclude package-lock.json (optional)
package-lock.json
